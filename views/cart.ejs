<!doctype html>
<html lang="en">
  <head>
    <title>Cart</title>
    <%- include('partials/_header') %>
  </head>

<body>
  <div id="cart-container">
    <div id="cart-title">Cart</div>

    <div id="cart-table">
      <table class="table">
        <thead>

          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">QTY</th>
            <th scope="col">Total</th>
          </tr>

        </thead>
        <tbody>

          <tr>
            <td><img src="https://media.istockphoto.com/photos/dog-food-picture-id184365735?b=1&k=20&m=184365735&s=170667a&w=0&h=9DcIKkWyCEeH9dHwgVrOrvPoR9B5htOK7tru3OYFAe4=">&ensp;ITEM NAME</td>
            <td>5.99</td>
            <td>1</td>
            <td>total</td>
          </tr>
        </tbody>
      </table>


      <div class="cart-footer">
        <div class="footer-total">TOTAL HERE</div>
        <form id="update" action="/cart" method="POST">
          <button class="update-btn">UPDATE TOTALS</button>
        </form>
        <form id="confirm" action="/purchase" method="POST">
          <button class="confirm-btn">PURCHASE</button>
        </form>
      </div>

    </div>








  </div>
</body>
