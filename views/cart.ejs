<!doctype html>
<html lang="en">
  <head>
    <title>Cart</title>
    <%- include('partials/_header') %>
  </head>

<body>
  <div id="cart-container">
    <div id="cart-title">Cart</div>

    <div id="cart-table">
      <table class="table">
        <thead>

          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">QTY</th>
            <th scope="col">Total</th>
            <th scope="col">Remove</th>
          </tr>

        </thead>
        <tbody>

          <tr>
            <% for (let key in cartItem) { %>
            <td><img src="<%=cartItem[key].image%>">&ensp;<%= cartItem[key].name %></td>
            <td>$<%= cartItem[key].price /100 %></td>
            <td>1</td>
            <td>$<%= cartItem[key].price / 100 %></td>
            <td><form method="POST" action="/cart/<%= cartItem[key].id %>">
              <button class="delete">Remove</button>
              </form>
            </td>
          </tr>
        <% } %>
        </tbody>
      </table>


      <div class="cart-footer">
        <div class="footer-total"><h3>TOTAL</h3><% for (let key in cartItem) { %>
                                    <% total+= cartItem[key].price / 100 %>
                                <% } %>
                                $<%= total %></div>
        <form id="update" action="/cart" method="POST">
          <button class="update-btn">UPDATE TOTALS</button>
        </form>
        <form id="confirm" action="/purchase" method="POST">
          <button class="confirm-btn">PURCHASE</button>
        </form>
      </div>

    </div>








  </div>
</body>
