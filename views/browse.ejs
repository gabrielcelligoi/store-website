<!doctype html>
<html lang="en">
  <head>
    <!-- Bootstrap Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Righteous&family=Work+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/browse.css" type="text/css" />

    <title>Browse</title>
    <%- include('partials/_nav-bar') %>
  </head>

<body>
  <div id="browse-main-container">
    <div id="filter-container">
      <h4>Price Filters</h4>
      <form method="POST" action="/filter" id="filter">
        <div class="input-wrap">
        <label for="min" name="min"></label>
        <input type="text" class="form-control" name="min" placeholder="Min">
      </div>
      <div class="input-wrap">
        <label for="max" name="max"></label>
        <input type="text" class="form-control" name="max" placeholder="Max">
      </div>
        <button class="button-browse" type="submit">Submit</button>
      </form>
    </div>


        <div id="products-container-browser">

          <% for (let key in product) { %>
            <article class="product-browse" id="product<%= product[key].id %>">
              <section class="product-img-browser">
                <img class="image-browser" src=<%= product[key].image %> >
                <div class="add-to-cart-browser">
                  <form class="add" method="GET" action="/products/<%= product[key].id %>">
                  <button class="add-to-cart-btn"type="submit">Visit</button>
                  </form>
                </div>
              </section>
              <section class="product-name-browser">
                <h6><%= product[key].name %></h6>
              </section>
              <section class="product-price-browser">
                <p>$<%= product[key].price / 100 %></p>
              </section>
            </article>
          <% } %>



          </div>


      </div>

  </div>

  <%- include('partials/_footer') %>

</body>
