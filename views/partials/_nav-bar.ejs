
<head>
 <!-- App CSS -->
 <link rel="stylesheet" href="/styles/nav-bar.css" type="text/css" />

<!-- FontAwsesome -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Righteous&family=Work+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
<!-- SCRIPTS -->
<script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
<script type="text/javascript" src="/scripts/app.js"></script>

</head>
<body>
  <nav>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
      <i class="fas fa-bars"></i>
    </label>

    <div class="logo">
      <a href="/"><p>PetStore</p></a>
    </div>

    <% if (seller) { %>
      <div class="greeting">
        <form id="logout" action="/logout" method="GET">
          <button type="submit">LOGOUT</button>
        </form>
      </div>

      <div class="greeting">
        <span>WELCOME BACK <a class="welcome" href="/sellerlistings"><%= user.name %></a> </span>
      </div>
      <% } %>

      <% if (user && !seller) { %>
        <div class="greeting">
          <form id="logout" action="/logout" method="GET">
            <button type="submit">LOGOUT</button>
          </form>
        </div>

        <div class="greeting">
          <span>WELCOME BACK <a class="welcome"><%= user.name %></a> </span>
        </div>
        <% } %>

      <% if (!user && !seller) { %>
          <div class="greeting">
            <a class="greeting" href="/login">Login</a>
          </div>

          <div class="greeting">
            <a class="greeting" href="/register"> Register</a>
          </div>
      <% } %>


      <% if (seller) { %>
        <ul>
          <li><a href="/newlisting">Create New Listing</a></li>
          <li><a href="/sellerlistings">See Your Listings</a></li>
          <li><a href="/products">Browse</a></li>
          <li>
            <form id="search-bar" action="/search" method="POST">
              <input class="search" type="text" placeholder="Search Products" name="search">
              <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
          </li>
        </ul>
      <% } %>

      <% if (user && !seller) { %>
        <ul>
          <li><a href="/cart">Cart</a></li>
          <li><a href="/favorites">Favorites</a></li>
          <li><a href="/products">Browse</a></li>
          <li>
            <form id="search-bar" action="/search" method="POST">
              <input class="search" type="text" placeholder="Search Products" name="search">
              <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
          </li>
        </ul>
      <% } %>

      <% if (!user && !seller) { %>
        <ul>
          <li><a href="/products">Browse</a></li>
          <li>
            <form id="search-bar" action="/search" method="POST">
              <input class="search" type="text" placeholder="Search Products" name="search">
              <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
          </li>
        </ul>
        <% } %>

  </nav>



</body>
