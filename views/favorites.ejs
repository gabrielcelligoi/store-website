<!doctype html>
<html lang="en">
  <head>
        <!-- Bootstrap Link -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Righteous&family=Work+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
        <!-- App CSS -->
        <link rel="stylesheet" href="/styles/favorites.css" type="text/css" />

    <title>Favorites</title>
    <%- include('partials/_nav-bar') %>
  </head>

<body>

  <div id="browse-main-container">
    <div id="filter-container"><h4>Your Favorites</h4></div>


      <table class="table">

          <div id="favorites-container">
            <% for (let key in favorites) { %>


              <article class="favorites" id="favorites<%= favorites[key].id %>">
                <section class="image-favorites">
                  <img class="favorites-img" src=<%= favorites[key].image %> >
                  <div class="favorites-buttons">
                    <form class="add" method="GET" action="/products/<%= favorites[key].id %>">
                    <button class="visit-btn"type="submit">Visit</button>
                    </form>
                    <form class="delete" method="POST" action="/favorites/<%= favorites[key].id %>/remove">
                      <button class="visit-btn" type="submit">Remove</button>
                    </form>
                  </div>
                </section>
                <section class="favorites-name">
                  <h6><%= favorites[key].name %></h6>
                </section>
                <section class="favorites-price">
                  <p>$<%= favorites[key].price / 100 %></p>
                </section>
              </article>



             <% } %>

          </div>

      </table>

  <%- include('partials/_footer') %>

</body>
