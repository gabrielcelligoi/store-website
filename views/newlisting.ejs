<!doctype html>
<html lang="en">
  <head>

    <!-- Bootstrap Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Create New Listing</title>
    <%- include('partials/_header') %>
  </head>

<body>
  <main class="centered-flex-list">

    <div class="form-shadow-list">
      <h3>Create New Listing</h3>
      <form action="/img" method="POST" id="load-img"></form>
      <form action="/newlisting" method="POST" id="new-listing-form">

        <label for="product_name" name="product_name">Product Name:&nbsp;</label>
        <input type="text" class="form-control" id="product_name" name="product_name" form="new-listing-form">
        <br>
        <br>
        <label id="description_label" for="description" name="description"></label>
        <textarea class="form-control" rows="2" cols="50" id="description" name="description" placeholder="Description" form="new-listing-form"></textarea>
        <br>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="price" name="price">Price: &nbsp;</label>
            <input type="text" class="form-control" id="price" form="new-listing-form" name="price">
          </div>

          <div class="form-group col-md-6">
            <label for="starting_quantity" name="starting_quantity">Stock:&nbsp;</label>
            <input type="text" class="form-control" id="starting_quantity" form="new-listing-form" name="starting_quantity">
          </div>
        </div>
        <br>

        <div class="form-row">
          <div class="form-group col-md-8">
            <label for="imgURL" name="imgURL">Image URL:&nbsp;</label>
            <input type="text" class="form-control" id="imgURL" form="load-img" name="imgURL">
          </div>
            &nbsp;
            <button class="btn btn-dark" id="load-img" type="submit" form="load-img">Upload</button>
            </div>
        <br>
        <br>
        <input type="hidden" id="hiddenImgUrl" form="new-listing-form" name="hiddenImgUrl">
        <button class="btn btn-dark" id="create_new_listing" form="new-listing-form" type="submit">Create Listing</button>
      </form>
      <br>
      <div id="imageContainer"></div>
  </main>

  <%- include('partials/_footer') %>

  </body>
</html>
